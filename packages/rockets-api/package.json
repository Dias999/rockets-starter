{
  "name": "rockets-api",
  "version": "0.0.1",
  "description": "Rockets Starter",
  "author": "Concepta Team",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "schema:drop": "node ../../node_modules/typeorm/cli.js schema:drop",
    "schema:sync": "node ../../node_modules/typeorm/cli.js schema:sync",
    "schema:rebuild": "yarn schema:drop && yarn schema:sync",
    "migration:create": "node ../../node_modules/typeorm/cli.js migration:create",
    "migration:generate": "node ../../node_modules/typeorm/cli.js migration:generate",
    "migration:show": "node ../../node_modules/typeorm/cli.js migration:show",
    "migration:run": "node ../../node_modules/typeorm/cli.js migration:run",
    "migration:revert": "node ../../node_modules/typeorm/cli.js migration:revert",
    "migration:rebuild": "yarn schema:drop && yarn migration:run",
    "seed:config": "node ../../node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "ROCKETS_MODULE_DEFERRED_TIMEOUT=60000 node ../../node_modules/typeorm-seeding/dist/cli.js seed",
    "seed:rebuild": "yarn migration:rebuild && yarn seed:run"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@rockts-org/nestjs-auth-jwt": "^4.0.0-alpha.4",
    "@rockts-org/nestjs-auth-local": "^4.0.0-alpha.4",
    "@rockts-org/nestjs-authentication": "^4.0.0-alpha.4",
    "@rockts-org/nestjs-crud": "^4.0.0-alpha.4",
    "@rockts-org/nestjs-jwt": "^4.0.0-alpha.4",
    "@rockts-org/nestjs-password": "^4.0.0-alpha.4",
    "@rockts-org/nestjs-typeorm-ext": "^4.0.0-alpha.4",
    "@rockts-org/nestjs-user": "^4.0.0-alpha.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "^0.2.41",
    "typeorm-seeding": "^1.6.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "27.0.6",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
